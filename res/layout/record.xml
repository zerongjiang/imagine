<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical" android:layout_width="fill_parent" 
    android:layout_height="fill_parent"> 
    <TextView android:text="CONTACT LIST" android:gravity="center" 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent" android:background="#DAA520" 
        android:textColor="#000000"> 
    </TextView> 
    <LinearLayout 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"> 
        <TextView android:text="Name" 
            android:gravity="left" android:layout_width="60px" 
            android:layout_height="wrap_content"
            > 
        </TextView> 
        <TextView android:text="Num" 
            android:layout_width="60px" android:gravity="left" 
            android:layout_height="wrap_content" 
            > 
        </TextView> 
        <TextView android:text="Times" 
            android:layout_width="60px" android:gravity="left" 
            android:layout_height="wrap_content"
            > 
        </TextView> 
        <TextView android:text="Total" 
            android:layout_width="60px" android:gravity="left" 
            android:layout_height="wrap_content" 
            > 
        </TextView> 
         <TextView android:text="Last Call" 
            android:layout_width="100px" android:gravity="left" 
            android:layout_height="wrap_content"
            > 
        </TextView> 
    </LinearLayout> 
    
<ListView
android:id="@+id/android:list"
android:layout_width="310px"
android:layout_height="263px">
<!--
android:layout_x="110px"
android:layout_y="57px"-->

</ListView>
<TextView android:id="@+id/android:empty"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="There is no notes now." />
</LinearLayout >
